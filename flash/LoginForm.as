package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import fl.controls.Button;	import flash.events.Event;	import fl.controls.Label; 	import fl.controls.TextInput; 	import flash.text.TextFormat;	import flash.events.KeyboardEvent;	import fl.controls.List; 	import flash.text.TextField; 	import flash.events.Event;	import flashx.textLayout.formats.VerticalAlign;			public class LoginForm extends MovieClip{						private var login_btn:Button = new Button();				private var name_lbl:Label = new Label();		private var name_ti:TextInput = new TextInput();		private var suburb_ti:TextInput = new TextInput();		private var postcode_ti:TextInput = new TextInput();		private var suburbs_li:List = new List();		private var gameControl_mc:MovieClip = new MovieClip();		private var person:Person = new Person();				public function LoginForm() {			// constructor code						createTextEntry();			createLoginButton();					}				private function createTextEntry(){			var tFormat:TextFormat = new TextFormat();			tFormat.font = "Arial"; 			tFormat.color = 0x000000; 			tFormat.size = 32; 			name_ti.move(269,454); 			name_ti.setSize(272.5, 40);						name_ti.setStyle("textFormat", tFormat); 			addChild(name_ti);						postcode_ti.move(269,534); 			postcode_ti.setSize(272.5, 40); 			postcode_ti.setStyle("textFormat", tFormat); 			postcode_ti.restrict = "0-9";			postcode_ti.addEventListener(KeyboardEvent.KEY_DOWN, checkPostcode);			addChild(postcode_ti);					}						private function checkPostcode(e:KeyboardEvent){			trace('key hit');			if(postcode_ti.length == 3){				createSuburbList();			}		}				private function createLoginButton(){			login_btn.width = 250;			login_btn.height = 50;			login_btn.x = 195;			login_btn.y = 770;			login_btn.label = 'Go';			login_btn.enabled = false;			addChild(login_btn);			login_btn.addEventListener(MouseEvent.CLICK, logUserIn);					}				private function createSuburbList(){			suburbs_li.setSize(272.5,40);			suburbs_li.move(269,600);			suburbs_li.addItem({label:"Greenwith", data:5125}); 			suburbs_li.addItem({label:"Golden Grove", data:5125}); 			suburbs_li.allowMultipleSelection = false; 			suburbs_li.addEventListener(Event.CHANGE, suburbSelected); 						addChild(suburbs_li);		}				private function suburbSelected(e:Event){			login_btn.enabled = true;			person.setSuburb(e.target.selectedItem.label);		}				private function logUserIn(e:MouseEvent){			person.setName(name_ti.text);			person.setPostcode(int(postcode_ti));			Object(parent).logInUser(person);		}			}	}